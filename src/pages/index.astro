<style lang="scss">
	.logo {
		text-align: center;

		img {
			width: 150px;
		}
	}
	h1 {
		margin: 1.5rem 0 0.75rem 0;
		font-size: 1.75rem;
		text-align: center;
	}
	.subtitle {
		font-size: 1.25rem;
		text-align: center;
	}
	.instructions {
		margin: 1.5rem 0;
		padding: 1.5rem;
		border-radius: 0.4rem;
		border: 4px solid rgba(255, 208, 133, 1);
		background-color: rgba(255, 208, 133, 0.3);
		font-size: 1.25rem;
		line-height: 1.25;
	}

	@media only screen and (min-width: 768px) {
		.logo {

			img {
				width: 200px;
			}
		}
		h1 {
			margin: 2rem 0 1rem 0;
			font-size: 2.5rem;
		}
		.subtitle {
			font-size: 1.5rem;
		}
		.instructions {
			margin: 2rem 0;
			padding: 2rem;
			font-size: 1.25rem;
			line-height: 1.6;
		}
	}

	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 1rem;
		padding: 0;
	}
</style>
